# ==============================================
# Smart Warehouse - Environment Variables
# ==============================================
# Скопируйте этот файл в .env и замените значения
# cp .env.example .env

# ==============================================
# JWT Configuration
# ==============================================
JWT_SECRET=your_secure_jwt_secret_key_min_32_chars

# ==============================================
# Database Configuration (PostgreSQL)
# ==============================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=warehouse_db
DB_USER=warehouse_user
DB_PASSWORD=secure_password_change_me
SSL_MODE=disable
DATABASE_URL=postgresql://warehouse_user:secure_password_change_me@postgres:5432/warehouse_db?sslmode=disable

# ==============================================
# Redis Configuration
# ==============================================
REDIS_URL=redis://redis:6379

# ==============================================
# GigaChat API Configuration (Sber AI)
# ==============================================
# Получите credentials на https://developers.sber.ru/portal/products/gigachat
GIGACHAT_CLIENT_ID=your_gigachat_client_id
GIGACHAT_CLIENT_SECRET=your_gigachat_client_secret
GIGACHAT_SCOPE=GIGACHAT_API_PERS
AI_SERVICE=sber

# ==============================================
# Frontend Configuration
# ==============================================
VITE_API_URL=http://localhost:3000/api
VITE_WS_URL=ws://localhost:3000
